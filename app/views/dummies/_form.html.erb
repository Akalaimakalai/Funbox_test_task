  <%= form_with model: dummy, url: dummies_path do |form| %>
    <div class="dummy_errors">
      <%= render "shared/error_messages", resource: dummy %>
    </div>
    <p>
      <%= form.label :value %>:
      <%= form.number_field :value, step: :any %>
    </p>

    <p>
      <%= form.label :deadline %>:
      <%= form.datetime_select :deadline %>
    </p>

    <p><%= form.submit %></p>
  <% end %>
